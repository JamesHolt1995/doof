---
import Layout from "../layouts/Layout.astro";
import ReleaseCal from "../components/ReleaseCal.astro";
import Navigation from "../components/Navigation.astro";
---

<Layout title="Doof | Releases">
	<div class="nav-wrap">
		<Navigation page="releases" />
	</div>
	<ReleaseCal />
</Layout>

<style lang="scss" is:global>
	// .nav-wrap {
	// 	display: none;
	// }

	@media screen and (min-width: 900px) {
		.nav-wrap {
			display: block;

			.menu__top,
			.menu__bottom {
				li:nth-of-type(3) a,
				li:nth-of-type(4) a {
					color: var(--blue) !important;
				}
			}
		}
	}
</style>
